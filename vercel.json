{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/data/**"]
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  
  "routes": [
    { 
      "src": "/api/.*", 
      "dest": "backend/server.js",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/",
      "dest": "frontend/index.html",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "/(.*\\.(html|css|js|png|jpg|svg))",
      "dest": "frontend/$1",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html",
      "headers": {
        "Content-Type": "text/html"
      }
    }
  ]
}
